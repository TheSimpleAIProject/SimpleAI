{
  "compilerOptions": {
    "module": "ESNext",
    "target" : "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "moduleDetection": "force"
  },
  "aliases": {
    "node_modules": {
      "ts": "node_modules",
      "js": "/node_modules"
    },
    "scripts": {
      "ts": "scripts/ts",
      "js": "/scripts/js"
    },
    "main_header": {
      "ts": "components/main_header/ts",
      "js": "/components/main_header/js"
    },
    "window_controls": {
      "ts": "components/window_controls/ts",
      "js": "/components/window_controls/js"
    },
    "main_page_selector": {
      "ts": "components/main_page_selector/ts",
      "js": "/components/main_page_selector/js"
    },
    "search_component": {
      "ts": "components/search_component/ts",
      "js": "/components/search_component/js"
    },
    "search_bar": {
      "ts": "components/search_bar/ts",
      "js": "/components/search_bar/js"
    },
    "search_result": {
      "ts": "components/search_result/ts",
      "js": "/components/search_result/js"
    },
    "node_pref": {
      "ts": "components/node_pref/ts",
      "js": "/components/node_pref/js"
    },
    "error_page": {
      "ts": "pages/error_page/ts",
      "js": "/pages/error_page/js"
    }
  }
}